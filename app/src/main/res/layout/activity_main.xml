<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/textOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:gravity="end|center"
            android:inputType="number"
            android:text="0"
            android:textSize="40pt" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/but_ac"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:onClick="operationAC"
                    android:text="AC"
                    android:textColor="@color/orange"
                    android:textSize="16pt" />

                <Button
                    android:id="@+id/but_del"
                    android:onClick="clickNumber"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:text="DEL"
                    android:textColor="@color/orange"
                    android:textSize="16pt" />

                <Button
                    android:id="@+id/but_change"
                    android:onClick="clickNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:text="+/-"
                    android:textColor="@color/orange"
                    android:textSize="16pt" />

                <Button
                    android:id="@+id/but_divide"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:onClick="operation"
                    android:text="/"
                    android:textColor="@color/orange"
                    android:textSize="16pt" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/but_7"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:text="7"
                    android:onClick="clickNumber"
                    android:backgroundTint="@color/white"
                    android:textSize="16pt" />

                <Button
                    android:id="@+id/but_8"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:onClick="clickNumber"
                    android:textSize="16pt"
                    android:backgroundTint="@color/white"
                    android:text="8" />

                <Button
                    android:id="@+id/but_9"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:onClick="clickNumber"
                    android:textSize="16pt"
                    android:backgroundTint="@color/white"
                    android:text="9" />

                <Button
                    android:id="@+id/but_multiply"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:onClick="operation"
                    android:text="x"
                    android:textColor="@color/orange"
                    android:textSize="16pt" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/but_4"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:onClick="clickNumber"
                    android:text="4"
                    android:backgroundTint="@color/white"
                    android:textSize="16pt" />

                <Button
                    android:id="@+id/but_5"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:onClick="clickNumber"
                    android:textSize="16pt"
                    android:backgroundTint="@color/white"
                    android:text="5" />

                <Button
                    android:id="@+id/but_6"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:onClick="clickNumber"
                    android:textSize="16pt"
                    android:backgroundTint="@color/white"
                    android:text="6" />

                <Button
                    android:id="@+id/but_minus"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:onClick="operation"
                    android:text="-"
                    android:textColor="@color/orange"
                    android:textSize="16pt" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/but_1"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:onClick="clickNumber"
                    android:text="1"
                    android:backgroundTint="@color/white"
                    android:textSize="16pt" />

                <Button
                    android:id="@+id/but_2"
                    android:onClick="clickNumber"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:textSize="16pt"
                    android:backgroundTint="@color/white"
                    android:text="2" />

                <Button
                    android:id="@+id/but_3"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:onClick="clickNumber"
                    android:textSize="16pt"
                    android:backgroundTint="@color/white"
                    android:text="3" />

                <Button
                    android:id="@+id/but_plus"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:onClick="operation"
                    android:text="+"
                    android:textColor="@color/orange"
                    android:textSize="16pt" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >



                <Button
                    android:id="@+id/but_0"
                    android:onClick="clickNumber"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:textSize="16pt"
                    android:backgroundTint="@color/white"
                    android:text="0" />

                <Button
                    android:id="@+id/but_comma"
                    android:onClick="clickNumber"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:textSize="16pt"
                    android:backgroundTint="@color/white"
                    android:text="," />

                <Button
                    android:id="@+id/but_eq"
                    android:layout_weight="7"
                    android:backgroundTint="@color/orange"
                    android:fontFamily="sans-serif-black"
                    android:onClick="operationEqual"
                    android:text="="
                    android:textColor="@color/white"
                    android:textSize="16pt" />
            </TableRow>

        </TableLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>